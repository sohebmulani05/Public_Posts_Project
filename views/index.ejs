<% layout("/layouts/boilerplate.ejs") %>

    <body class="body">
        <div class="offset-4">
            <h1 class="heading">Public Posts</h1>
            <% for(post of posts) { %>

                <div class="card" style="width: 30rem;">
                    <div class="card-body">
                        <h5 class="card-title">@<%= post.username %>
                        </h5>
                        <hr>
                        <h6 class="card-subtitle mb-2 text-body-secondary">content</h6>
                        <p class="card-text">
                            <%= post.content %>
                        </p>

                        <div class="btn1">
                            <div class="btn2">
                                <a href="http://localhost:8080/posts/<%= post.id %>" class="card-link btnSE">See In
                                    Detail</a>
                                <a href="http://localhost:8080/posts/<%= post.id %>/edit"
                                    class="card-link btnSE">Edit</a>
                            </div>
                            <form method="post" action="/posts/<%=post.id%>?_method=DELETE"> <br>
                                <button class="btn btn-outline-danger d-btn"> Delete-Post </button>
                            </form>
                        </div>
                    </div>
                </div>
                <br><br>

                <% } %>
        </div>
    </body>